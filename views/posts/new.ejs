<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>

    <!-- posts start -->
    <div class="posts">
      <% include partials/top %>

      <!-- main start -->
      <!-- views/posts/new.ejs -->
      <div class="new">
        <h3>New Post</h3>
        <form class="posts_form" action="/posts" method="post">
          <label>Title</label>
          <input type="text" name="post[title]" value="">
