          <label>Body</label>
          <textarea name="post[body]"></textarea>
          <button type="submit">Submit</button>
        </form>
        <br>
        <a href="/posts"><button>Back</button></a>
      </div><!-- main end -->

    </div><!-- posts end -->

    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
